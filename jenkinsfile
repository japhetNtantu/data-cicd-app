pipeline 
{
    agent any 
    stages {
        stage('Build Application') { 
        steps {
            bat 'mvn clean install'
                // 
            }
        }
        stage('Unit Test') { 
            steps {
            bat 'mvn clean test'
                // 
            }
        }
        stage('Deploy Application To Mulesoft cloudhub') { 
            steps {
            bat 'mvn package deploy -DmuleDeploy -Denv=Sandbox -Dworkers=1 -DvCore=Micro -Dappname=Mapp-application -Dbusiness=Cap4Lab -Danypoint.username=japhetntantu4 -Danypoint.password=Ntantukava150819 -Dmule.version=4.4.0'
                // 
            }
        }
    }
}