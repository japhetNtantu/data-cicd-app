pipeline 
{
    agent any 
    stages {
        stage('Test Application') { 
        steps {
            bat 'mvn clean test'
                // 
            }
        }
        stage('Build Application') { 
            steps {
            bat 'mvn clean install'
                // 
            }
        }
        stage('Deploy Application To Mulesoft cloudhub') { 
            steps {
            bat 'mvn clean deploy -DmuleDeploy -DskipTests -Dmule.version=4.4.0 -Danypoint.username=japhetntantu4 -Danypoint.password=Ntantukava150819 -Denv=Sandbox -Dappname=secretmapp -Dbusiness=Cap4Lab -DvCore=Micro -Dworkers=1'
                // 
            } 
        }
    }
}